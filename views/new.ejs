<%- include ('partials/header.ejs') %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog Post
    </div>

    <form action="/blogs" method="post" class="ui form">
        
        <div class="field">
            <label for="blogPost[title]"> Title</label>
            <input type="text" name="blogPost[title]" id="" placeholder="Post Title">
        </div>

        <div class="field">
            <label for="blogPost[image]">imageUrl</label>
            <input type="text" name="blogPost[image]" id="" placeholder="Post Image">
        </div>
        <div class="field">
            <label for="blogPost[releaseDate]"> Release Date</label>
            <input type="date" name="blogPost[releaseDate]" id="" placeholder="Release Date">

        </div>
        <div class="field">
            <label for="blogPost[body]"> Blog Description</label>
            <textarea name="blogPost[body]"></textarea> 

        </div>
        <div class="three fields">
            <label for="blogPost[topSongs]"> Top Songs</label>
            <div class="field">
                <input type="text" name="blogPost[topSongs]" id="">
            </div>
            <div class="field">
                <input type="text" name="blogPost[topSongs]" id="">
            </div>
            <div class="field">
                <input type="text" name="blogPost[topSongs]" id=""> 
            </div>
    
        </div>
        <div class="field">
            <label for="blogPost[rating]"> Rate the Album</label>
            <input type="number" name="blogPost[rating]" id="" placeholder=" Rating" max="10">

        </div>
        
        
        <input type="submit" value="Create Blog" class="ui black basic button">
    
    
        
        
        
    </form>
</div>





